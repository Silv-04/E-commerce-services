        {
          "name": "8.2 Récupérer les produits",
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Status 200 OK', function () {",
                  "  pm.response.to.have.status(200);",
                  "});",
                  "",
                  "var jsonData = pm.response.json();",
                  "if (jsonData.length > 0) {",
                  "  pm.collectionVariables.set('productId', jsonData[0].id);",
                  "  console.log('Produit sélectionné: ' + jsonData[0].id);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwtToken}}"
              }
            ],
            "url": {
              "raw": "{{productBaseUrl}}/api/v1/products",
              "host": ["{{productBaseUrl}}"],
              "path": ["api", "v1", "products"]
            }
          }
        },
        {
          "name": "8.3 Créer une commande",
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Status 201 Created', function () {",
                  "  pm.response.to.have.status(201);",
                  "});",
                  "",
                  "var jsonData = pm.response.json();",
                  "pm.test('Commande créée avec succès', function () {",
                  "  pm.expect(jsonData).to.have.property('id');",
                  "  pm.expect(jsonData).to.have.property('userId');",
                  "  pm.expect(jsonData).to.have.property('productId');",
                  "});",
                  "",
                  "pm.collectionVariables.set('orderId', jsonData.id);",
                  "console.log('✓ Commande créée: ' + jsonData.id);"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
